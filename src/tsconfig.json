{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "strict": true,
    "outDir": "./dist/out-tsc/app",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es5",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "core-js/es7/reflect": ["../node_modules/core-js/proposals/reflect-metadata"],
      "core-js/es6/*": ["../node_modules/core-js/es/*"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "karma.conf.js",
    "test.ts",
    "**/*.spec.ts",
    "**/*.mock.ts",
    "environments/environment.dev.ts",
    "environments/environment.prod.ts",
    "environments/environment.dev.js",
    "app/core/validators/json.validator.ts",
    "app/modules/metadata/device-types-overview/device-types/content-variable.validator.ts",
    "assets/env.template.js"
  ],
}
